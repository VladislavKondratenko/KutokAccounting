@using KutokAccounting.DataProvider.Models
@using KutokAccounting.Services.Vendors.DataTransferObjects
@inject IVendorService VendorService

<MudDialog>
    <TitleContent>
        Додати нового постачальника
    </TitleContent>
    <DialogContent>
        <MudForm @bind-IsValid="_isSuccess">
            <MudTextField @bind-Value="_name"
                          Placeholder="Введіть назву постачальника"
                          Label="Назва"
                          Variant="Variant.Outlined"
                          Counter="100"
                          MaxLength="100"
                          Lines="1"
                          Immediate="true"
                          Required="true"
                          RequiredError="Це поле обов'язкове"
                          Margin="Margin.Normal" />
            <MudTextField @bind-Value="_description"
                          Placeholder="Введіть опис постачальника"
                          Label="Опис"
                          Variant="Variant.Outlined"
                          Counter="1024"
                          MaxLength="1024"
                          Lines="5"
                          Immediate="true"
                          Required="false"
                          Margin="Margin.Normal" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Назад</MudButton>
        <MudButton OnClick="Add" Disabled="!_isSuccess" Color="Color.Primary">Додати</MudButton>
    </DialogActions>
</MudDialog>

@code{
    [CascadingParameter]
    public IMudDialogInstance MudDialog { get; set; }

    private string _name = null!;
    private string _description = null!;

    private bool _isSuccess = false;

    private async Task Add()
    {
        var vendor = new VendorDto()
        {
            Name = _name,
            Description = _description
        };

        await VendorService.CreateAsync(vendor, CancellationToken.None);

        MudDialog.Close(DialogResult.Ok(true));
    }

    private void Cancel() => MudDialog.Close();
}